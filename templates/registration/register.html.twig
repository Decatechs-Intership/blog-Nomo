
{% extends 'question/base.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    <div class="container w-50">
        <h1 class="text-info text-center p-3">Register</h1>
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div class="options">
            {{ form_row(registrationForm.agreeTerms) }}
            <small class="loginOption">
                Do you  have an account ? You can login here > <a class="btn btn-secondary btn-sm " href="{{ path('app_login') }}">login</a>
            </small></div>
        <button type="submit" class="btn btn-info">Register</button>
        {{ form_end(registrationForm) }}
    </div>
    <style>
        .options{
            display: flex;
           }
        .loginOption{
            margin-left: 10%;
        }
    </style>
{% endblock %}
