{% extends 'question/admin/base.html.twig' %}
{% block title %}Tous les Services{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">Nos Services</h1>
        <a href="{{ path('blog.service.admin.create',{ username:username}) }}" class="btn btn-info center ">
            nouveau service
            <br>
        </a>
        <div class="row">
            {% for service in services %}
                <div class="col-md-6 mb-4">
                    <div class="card d-flex flex-row">
                        <div class="card-body d-flex flex-column justify-content-center">
                            <h5 class="card-title">{{ service.name }}</h5>
                            <p class="card-text text-dark">{{ service.miniDescription }}</p>
                            <a href="{{ path('blog.service.admin.show',{id:service.id, username:username}) }}" class="btn btn-info mt-2">En savoir plus</a>
                        </div>
                        <div class="card-icon d-flex flex-column align-items-center justify-content-center">
                            <i class="fa fa-cogs fa-2x mb-3"></i>
                            <a href="{{ path('blog.service.admin.edit',{id:service.id, username:username}) }}" class="btn btn-dark mb-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('blog.service.admin.delete',{id:service.id, username:username}) }}" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </div>


                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: .25rem;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .card-icon {
            background-color: #f8f9fa;
            border-left: 1px solid #ddd;
            padding: 1rem;
            width: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card-body {
            flex: 1;
        }
        .card-title {
            font-size: 1.25rem;
            font-weight: 500;
            color: #007bff; /* Titre en bleu */
        }
        .card-text {
            font-size: 1rem;
            color: #212529; /* Mini description en noir */
        }
        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }
        .action-buttons a {
            color: #fff;
            border: none;
        }
        .btn-dark {
            background-color: #343a40;
            border-color: #343a40;
        }
        .btn-dark i {
            font-size: 1.5rem;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-danger i {
            font-size: 1.5rem;
        }
        .action-buttons {
            margin-left: 10px;
            display: flex;
            flex-direction: column;
        }
        .card-icon a {
            color: #fff;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            font-size: 1.25rem;
        }

        .card-icon .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .card-icon .btn-dark{
            border-color: white;
        }

        .card-icon .btn-danger {
            background-color: #dc3545;
            border-color: #972731;
        }
        .center{
            margin-left: 42%;
        }
    </style>
{% endblock %}
